{
  "name": "shrolebot",
  "version": "1.0.0",
  "description": "A chatbot that allows users to allocate roles for the board game Secret Hitler, using the AWS serverless platform.",
  "dependencies": {
    "aws-sdk": "^2.551.0",
    "node-telegram-bot-api": "^0.30.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7"
  },
  "devDependencies": {
    "@shelf/jest-dynamodb": "^1.4.1",
    "jest": "^24.9.0",
    "serverless": "^1.54.0",
    "standard": "^14.3.1"
  },
  "scripts": {
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test": "jest test",
    "test:watch": "jest test --watch",
    "deploy:dev": "bash -c \"serverless deploy --stage dev --verbose --version \\\"$(date --utc +%Y%m%d.%H%M%S).$(git rev-parse --short HEAD)\\\"\"",
    "deploy:prod": "bash -c \"serverless deploy --stage prod --verbose --version \\\"$(date --utc +%Y%m%d.%H%M%S).$(git rev-parse --short HEAD)\\\"\"",
    "teardown:dev": "serverless remove --stage dev --verbose",
    "teardown:prod": "serverless remove --stage prod --verbose"
  },
  "standard": {
    "env": [
      "jest"
    ],
    "globals": [ "fail" ]
  },
  "jest": {
    "preset": "@shelf/jest-dynamodb",
    "setupFiles": [
      "./test/fixRequestJest.js",
      "./test/environmentVariables.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/domdomegg/shrolebot.git"
  },
  "author": "Adam Jones (domdomegg)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/domdomegg/shrolebot/issues"
  },
  "homepage": "https://github.com/domdomegg/shrolebot#readme"
}
